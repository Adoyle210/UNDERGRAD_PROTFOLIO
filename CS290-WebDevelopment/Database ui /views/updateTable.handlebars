<h2>update exercise!!</h2>

<form action="/updateReturn">
    exercise:
    <input type="text" name="exercise" id="exercise" value="{{results.name}}"><br>
    reps:
    <input type="number" name="reps" id="reps" value="{{results.reps}}"><br>
    weight:
    <input type="number" name="weight" id="weight" value="{{results.weight}}"><br>
    date:
    <input type="date" name="date" id="date" value="{{results.date}}"><br>
    lbs:
    {{#if results.lbs}}
		<input type="checkbox" name="lbsCheck" id="unitCheck" checked><br>
	{{else}}
		<input type="checkbox" name="lbsCheck" id="unitCheck"><br>
    {{/if}}
    <input type="hidden" name="id" value={{results.id}}>
    <input type="submit" name="updateExercise" value="Update Exercise" id="updateExercise">
</form>